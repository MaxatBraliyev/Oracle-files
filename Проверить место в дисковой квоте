select t.TABLESPACE_NAME,
       t.BYTES /1024 /1024 / 1024 as current_quota_gb,
       t.MAX_BYTES /1024 /1024 / 1024 as max_qoutas_gb,
       t.blocks,
       t.MAX_BLOCKS,
       t.DROPPED
from user_ts_quotas t;

SELECT A.TABLE_NAME "ТАБЛИЦА",
B.BYTES "РАЗМЕР (МБ)",
TRUNC((A.BLOCKS * 100) / B.BLOCKS) "ЗАНЯТО(%)",
B.EXTENTS "ЭКСТЕНТОВ"
FROM USER_TABLES A,
(SELECT SEGMENT_NAME,
SUM(BYTES) / 1024 / 1024 BYTES,
SUM(BLOCKS) BLOCKS,
COUNT(*) EXTENTS
FROM USER_EXTENTS
WHERE SEGMENT_TYPE = 'TABLE'
GROUP BY SEGMENT_NAME) B
WHERE A.TABLE_NAME IN (SELECT Y.OBJECT_NAME
FROM ALL_OBJECTS Y
WHERE Y.OWNER = 'MONO_BLACK_USER'
AND Y.OBJECT_TYPE = 'TABLE')
AND A.TABLE_NAME = B.SEGMENT_NAME
AND B.BYTES > 1
ORDER BY B.BYTES DESC;
